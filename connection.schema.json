{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "database": {
      "title": "Database",
      "type": "string",
      "minLength": 1
    },
    "username": {
      "title": "Username",
      "type": "string",
      "minLength": 1
    },
    "usePassword": {
      "title": "Use password",
      "type": "string",
      "enum": [
        "SQLTools Driver Credentials",
        "Ask on connect",
        "Use empty password",
        "Save password"
      ],
      "default": "SQLTools Driver Credentials"
    },
    "password": {
      "title": "Password",
      "type": "string",
      "minLength": 1
    },
    "tediousOptions": {
      "type": "object",
      "title": "MSSQL Tedious driver specific options",
      "properties": {
        "abortTransactionOnError": {
          "type": "boolean"
        },
        "appName": {
          "type": "string",
          "default": "SQLTools"
        },
        "instanceName": {
          "type": "string"
        },
        "useUTC": {
          "type": "boolean",
          "default": true
        },
        "encrypt": {
          "type": "boolean",
          "default": true
        },
        "trustServerCertificate": {
          "type": "boolean",
          "default": false
        },
        "tdsVersion": {
          "type": "string",
          "enum": ["7_1", "7_2", "7_3_A", "7_3_B", "7_4"]
        }
      }
    },
    "msnodesqlv8Options": {
      "type": "object",
      "title": "MSSQL Node V8 driver specific options",
      "properties": {
        "instanceName": {
          "type": "string"
        },
        "trustedConnection": {
          "type": "boolean",
          "default": false
        },
        "useUTC": {
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "properties": {
    "dbDriver": {
      "title": "TDS driver",
      "type": "string",
      "minLength": 1,
      "enum": ["tedious", "mssqlnodev8"],
      "default": "mssqlnodev8"
    },
    "connectionMethod": {
      "title": "Connect using",
      "type": "string",
      "minLength": 1
    },
    "connectionTimeout": {
      "title": "Connection Timeout",
      "type": "integer",
      "minimum": 0,
      "default": 15
    },
    "sidePanelOptions": {
      "type": "object",
      "title": "Side panel options (Experimental)",
      "properties": {
        "emptyDatabase": {
          "title": "Display Empty Databases",
          "type": "boolean",
          "default": true
        },
        "emptySchema": {
          "title": "Display Empty Schemas",
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "dependencies": {
    "dbDriver": {
      "oneOf": [
        {
          "properties": {
            "dbDriver": {
              "const": "tedious"
            },
            "connectionMethod": {
              "enum": [
                "tedious Connection String",
                "Server and Port",
                "Socket File"
              ],
              "default": "Server and Port"
            }
          },
          "required": ["connectionMethod"]
        },
        {
          "properties": {
            "dbDriver": {
              "const": "mssqlnodev8"
            },
            "connectionMethod": {
              "enum": ["mssqlnodev8 Connection String", "Integrated"],
              "default": "Integrated"
            }
          },
          "required": ["connectionMethod"]
        }
      ]
    },
    "connectionMethod": {
      "oneOf": [
        {
          "properties": {
            "connectionMethod": {
              "enum": ["Server and Port"]
            },
            "server": {
              "title": "Server Address",
              "type": "string",
              "minLength": 1,
              "default": "localhost"
            },
            "port": {
              "title": "Port",
              "minimum": 1,
              "default": 1433,
              "type": "integer"
            },
            "database": {
              "$ref": "#/definitions/database"
            },
            "username": {
              "$ref": "#/definitions/username"
            },
            "usePassword": {
              "$ref": "#/definitions/usePassword"
            },
            "tediousOptions": {
              "$ref": "#/definitions/tediousOptions"
            }
          },
          "required": ["server", "port", "database", "username"]
        },
        {
          "properties": {
            "connectionMethod": {
              "enum": ["Socket File"]
            },
            "socketPath": {
              "title": "Socket file path",
              "type": "string",
              "minLength": 1
            },
            "database": {
              "$ref": "#/definitions/database"
            },
            "username": {
              "$ref": "#/definitions/username"
            },
            "usePassword": {
              "$ref": "#/definitions/usePassword"
            },
            "tediousOptions": {
              "$ref": "#/definitions/tediousOptions"
            }
          },
          "required": ["socketPath", "database", "username"]
        },
        {
          "properties": {
            "connectionMethod": {
              "enum": ["tedious Connection String"]
            },
            "tediousConnectString": {
              "title": "Connection String",
              "type": "string",
              "minLength": 1
            },
            "tediousOptions": {
              "$ref": "#/definitions/tediousOptions"
            }
          },
          "required": ["tediousConnectString"]
        },
        {
          "properties": {
            "connectionMethod": {
              "enum": ["mssqlnodev8 Connection String"]
            },
            "msnodesqlv8ConnectString": {
              "title": "Connection String",
              "type": "string",
              "minLength": 1
            },
            "msnodesqlv8Options": {
              "$ref": "#/definitions/msnodesqlv8Options"
            }
          },
          "required": ["msnodesqlv8ConnectString"]
        },
        {
          "properties": {
            "connectionMethod": {
              "enum": ["Integrated"]
            },
            "odbcDriver": {
              "title": "ODBC Driver",
              "type": "string",
              "minLength": 1,
              "default": "SQL Server"
            },
            "server": {
              "title": "Server",
              "type": "string",
              "minLength": 1
            },
            "database": {
              "$ref": "#/definitions/database"
            },
            "msnodesqlv8Options": {
              "$ref": "#/definitions/msnodesqlv8Options"
            }
          },
          "required": ["odbcDriver", "server"]
        }
      ]
    },
    "usePassword": {
      "oneOf": [
        {
          "properties": {
            "usePassword": {
              "enum": ["Ask on connect"]
            },
            "askForPassword": {
              "type": "boolean",
              "default": true
            }
          }
        },
        {
          "properties": {
            "usePassword": {
              "enum": ["Use empty password"]
            }
          }
        },
        {
          "properties": {
            "usePassword": {
              "enum": ["Save password"]
            },
            "password": {
              "$ref": "#/definitions/password"
            }
          },
          "required": ["password"]
        },
        {
          "properties": {
            "usePassword": {
              "enum": ["SQLTools Driver Credentials"]
            }
          }
        }
      ]
    }
  },
  "required": ["connectionMethod"]
}
